/* pages/order/order.wxss */

.order-wrap {
  padding: 0 28rpx;
  font-size: 32rpx;
}

.order-block {
  margin-top: 8rpx;
}

.block-title {
  font-size: 32rpx;
  padding: 8rpx 0;
  display: block;
  width: 100%;
}

.info-list {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #f4f4f4;
  position: relative;
}

.info-list text {
  height: 90rpx;
  line-height: 90rpx;
  display: block;
  width: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.info-list input, .info-list picker {
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
  margin-left: 200rpx;
  display: block;
  color: #cdccd2;
}

.order-block .textarea-list text {
  margin: 30rpx 0;
  display: inline-block;
}

.order-block textarea {
  height: 200rpx;
  border: 1px #f4f4f4 solid;
  border-radius: 3px;
  padding: 8rpx 16rpx;
  width:95%;
}

.order-button {
  padding: 20rpx;
}

.choose-option {
  margin-top: 16rpx;
}

.choose-option radio-group {
  overflow: hidden;
}

.choose-option label {
  float: left;
  width: 50%;
  margin-top: 16rpx;
}

.choose-option label icon {
  float: left;
  margin-right: 8rpx;
  margin-top: -2rpx;
}

.choose-option text {
  /*float: left;*/
}

.choose-option text:after {
  content: '.';
  height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.choose-option label radio {
  margin-right: 30rpx;
  margin-bottom: 14rpx;
}

.backFor {
  text-align: right;
}

.openGoodsList {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  background: rgba(255,99,100,0.6);
  border-radius: 50%;
  top: 40%;
  right: -50rpx;
  /*margin-top: -50rpx;*/
  z-index: 2;
}

.openGoodsList image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 24rpx;
  left: 4rpx;
}

.goodsListPage {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  transition: 0.3s;
}

.right_100 {
  right: -100%;
}

.right_0 {
  right: 0;
}

.goodsListPage .list-right {
  background: #fff;
  width: 85%;
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
}

.goodsListPage .list-right .closeGoodList {
  position: absolute;
  height: 100rpx;
  width: 100rpx;
  background: #fff;
  border-radius: 50%;
  top: 40%;
  left: -50rpx;
  /*margin-top: -50rpx;*/
}

.goodsListPage .closeGoodList image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 26rpx;
  left: 12rpx;
}

.goodsListPage .list-right .operate {
  position: absolute;
  bottom: 0;
  height: 100rpx;
  border-top: 1px #d5d5d5 solid;
  width: 100%;
  left: 0;
  overflow: hidden;
}

.goodsListPage .list-right .operate>view {
  float: left;
  width: 50%;
  height: 100%;
}

.goodsListPage .list-right .operate .cart {
  background: #fff;
  text-align: center;
}

.operate .cart>view {
  overflow: hidden;
  margin: 0 auto;
  width: 264rpx;
}

.operate .cart .icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-top: 30rpx;
}

.operate .cart text {
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 10rpx;
  margin-top: 30rpx;
  display: inline-block;
  max-width: 204rpx;
  overflow:hidden;
}

.goodsListPage .list-right .operate .sure {
  background: #fe6263;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.goodsListPage .list-right .scrollList {
  padding: 0 0rpx 100rpx 24rpx;
  height: 100%;
  box-sizing: border-box;
}

.list-right .scrollList .item-list {
  border-bottom: 1px #d5d5d5 solid;
  overflow: hidden;
  padding:20rpx 24rpx 20rpx 0;
}

.list-right .scrollList .item-list .left {
  float: left;
  width: 128rpx;
  height: 128rpx;
}

.list-right .scrollList .item-list .left image {
  width: 100%;
  height: 100%;
}

.list-right .scrollList .item-list .center {
  margin: 0 144rpx 0 144rpx;
}

.item-list .center text {
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #b6b6b6;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-list .center text.goodsName {
  font-size: 28rpx;
  color: #333;
}

.list-right .scrollList .item-list .right {
  float: right;
  width: 130rpx;
  overflow: hidden;
  margin-top: 46rpx;
}

.item-list .right view {
  float: left;
}

.item-list .right .count-option, .item-list .right .count-num {
  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.item-list .right .count-num {
  width: 48rpx;
}

.item-list .right .plus {
  background-image: url('../../img/plus-icon.png');
  background-size: 100% 100%;
}

.item-list .right .add {
  background-image: url('../../img/add-icon.png');
  background-size: 100% 100%;
}

.list-right .scrollWrap {
  height: 360rpx;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}

.list-right .scrollDetail {
  position: absolute;
  top: 30rpx;
  left: 0;
  width: 100%;
  height: 330rpx;
  background: #f6f6f6;
  z-index: 101;
  padding: 16rpx 16px 0;
  box-sizing: border-box;
}

.scrollWrap .closeDetail {
  background: #f6f6f6;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0rpx;
  right: 24rpx;
  color: #797979;
  text-align: center;
  line-height: 60rpx;
  font-size: 54rpx;
  z-index: 102;
}

.detailCon .detailList {
  height: 68rpx;
  line-height: 68rpx;
  color: #b6b6b6;
  font-size: 28rpx;
  border-bottom: #dedede solid 1rpx;
}

.detailCon .detailList text {
  display: inline-block;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.detailCon .detailList .name {
  color: #333;
  font-size: 30rpx;
  width: 55%;
  margin-right: 30rpx;
}
