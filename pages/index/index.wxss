/* pages/shoporder/shoporder.wxss */

.order-shop-list {
  margin-bottom: 100rpx;
  background: #f3f3f3;
  padding-top: 24rpx;
}

.bottom-pay {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.orderShopList {
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.orderShopList > view {
  min-height: 52rpx;
  line-height: 52rpx;
  color: #727272;
}

.orderShopList > view.first-line {
  border-bottom: 1px solid #f3f3f3;
}

.text-left {
  color: #bebebe;
  display: inline-block;
  width: 160rpx;
}

.text-money {
  float: right;
  font-size: 28rpx;
  color: #ff4c4c;
}

.delete-btn {
  float: right;
  font-size: 22rpx;
  color: #a6a6a6;
  border: 1px solid #b6b6b6;
  border-radius: 6rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 16rpx;
}

.btn-area-button {
  font-size: 32rpx;
}
